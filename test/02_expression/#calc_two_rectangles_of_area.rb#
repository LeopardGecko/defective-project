require 'test/unit'
require_relative '../../src/02_expression/calc_two_rectangles_of_area'

class ExpressionTest < Test::Unit::TestCase
  def calc_two_rectangles_of_area_cond1 
    actual = calc_two_rectangles_of_area(0, 1, 1, 0, 2, 2, 0, 5);
    expected = 7;
    assert_equal expected, actual
  end

  def calc_two_rectangles_of_area_cond2 
    #######
    #ooooo#
    #oxxoo#
    #oxxoo#
    #oxxoo#
    #ooooo#
    #######
    actual = calc_two_rectangles_of_area(0, 5, 5, 0, 1, 3, 4, 1);
    expected = 25 + 6 - 6;
    assert_equal expected, actual
  end

  def calc_two_rectangles_of_area_cond3 
    ##########
    #ooooo####
    #ooooo####
    #oooxxxxx#
    #oooxxxxx#
    #ooooo####
    ##########
    actual = calc_two_rectangles_of_area(0, 5, 5, 0, 3, 4, 8, 1) 
    expected = 25+10-4
    assert_equal expected, actual
  end
  
  def calc_two_rectangles_of_area_cond4
    #########
    #ooooo###
    #ooooo###
    #oooxxxx#
    #oooxxxx#
    ####xxxx#
    #########
    actual = calc_two_rectangles_of_area(0, 5, 5, 0, 5, 5, 7, -5) 
    expected = 100+20-10
    assert_equal expected, actual
  end

  def test_is_intersect_CC_cond5
    actual = is_intersect_CC(0, 0, 5, 10 , 3, 5) 
    expected = 0
    assert_equal expected, actual
  end
  def test_is_intersect_CC_cond6
    actual = is_intersect_CC(0, 0, 5, 0 , 0, 5) 
    expected = 1
    assert_equal expected, actual
  end
end
